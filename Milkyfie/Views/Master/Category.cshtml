        if($('#txtCategoryName').val()=='')
            {
              Q.notify(-1, 'Category Required.');
              return false;
            }
              Q.preloader.load();
               formData=new  FormData();
              let objToAppend= {
                 CategoryID:  $("#hdncatid").val(),
                 Icon: $("#txticon").val(),
                 CategoryName: $("#txtCategoryName").val(),
                 Parent: {ParentID:$("#ddlCategory").val()},
                                }
            
       //formData.append('Category', objToAppend);
       console.log(objToAppend)
         $.ajax({
             type: 'POST',
             url: 'Category',
             data:objToAppend,
             success: result => {
              if(result.statusCode==1)
              {

                  $('input').val('');
                  $('.field-validation-valid').remove();
                    loadCategory();
                        Q.notify(result.statusCode, result.responseText);

              }
              else
              {
                      Q.notify(result.statusCode, result.responseText);
              }
                Q.preloader.remove();
             },
             error:xhr=>{
                   Q.preloader.remove();
                 Q.renderError(xhr);
                    Q.notify(-1, 'An error occurred.');
             }
         })
    });



     function loadCategory(){
           Q.preloader.load();
         $.ajax({
               type: 'post',
                url: 'GetCategory',
                data: '',
                success: function (data) {
                      $('tbody').html(data);
                        Q.preloader.remove();
                },
                error: function (data) {
                    console.log('An error occurred.');
