@model Milkyfie.Models.ApplicationUser
@{
    ViewData["Title"] = "Users";
    Layout = "_LayOut";
}
<div class="main-container">
    <!-- Row start -->
    <div class="row gutters">
        <div id="frmcat" class="w-100">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-header bg-primary text-white h6">
                        <span id="spnrole">@Model.Role</span>
                      @*  <input type="hidden" value="@Model.Role" id="hdnroleid" />*@

                        <div class="float-right">  <button id="btnNew" class="btnaddUser btn btn-info">New</button></div>
                    </div>
                    <div class="card-body">

                    
                            <div class="table-container">
                                <div class="table-responsive">
                                    <table id="d" class="table custom-table">
                                        <thead>
                                            <tr>
                                                <th>
                                                    #
                                                </th>
                                                <th>
                                                    User Name
                                                </th>

                                                <th>
                                                    Name
                                                </th>
                                                <th>
                                                    Mobile
                                                </th>
                                                <th>
                                                    EmailID
                                                </th>
                                                <th>
                                                    Balance
                                                </th>
                                                <th>
                                                    Address
                                                </th>
                                                <th>
                                                    Pincode
                                                </th>
                                                  <th>
                                                    Action
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                       

                   
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
<script>

    $(document).ready(function(){
   getUsers();
    })

     $('.btnaddUser').click(function(){
           Q.preloader.load();
              $.ajax({
                type: 'post',
                url: '/Users/UserForm',
                 data:{role:$('#spnrole').text()},
                success: function (data) {
                    console.log(data)
                Q.alert({
                    title: "Add User",
                    body:data,
                    width : '900px',
                    });
                      Q.preloader.remove();
                },
                error: function (data) {
                    Q.renderError(data);
                },
            });
    });




    function getUsers(){
        Q.preloader.load();
        $.post( "UsersDetails" ,{role:$('#spnrole').text()}, function( data ) {
            $('tbody').html(data);
        });
        Q.preloader.remove();
    }
</script>
}