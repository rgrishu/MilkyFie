@using Milkyfie.AppCode.Reops.Entities;
@model Dashboard

<div class="row gutters">
        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
            <div class="info-stats4">
                <div class="info-icon">
                    <i class="icon-shopping-bag1"></i>
                </div>
                <div class="sale-num">
                    <a id="lnkAddBalance">
                        <h3>
                            @Html.Raw(@Model!=null && @Model.User!=null ?@Model.User.Balance:0)
                        </h3>
                        <p>Add Balance</p>
                    </a>
                </div>
            </div>
        </div>
         <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
            <div class="info-stats4">
                <div class="info-icon">
                    <i class="icon-activity"></i>
                </div>
                <div class="sale-num">
                    <h3>@Html.Raw(@Model!=null?@Model.TotalCustomers:0)</h3>
                    <p>Customers</p>
                </div>
            </div>
        </div>
       
        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
            <div class="info-stats4">
                <div class="info-icon">
                    <i class="icon-shopping-bag1"></i>
                </div>
                <div class="sale-num">
                    <h3>@Html.Raw(@Model!=null?@Model.TotalOrderSchedule:0)</h3>
                    <p>Schedules</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
            <div class="info-stats4">
                <div class="info-icon">
                    <i class="icon-shopping-cart1"></i>
                </div>
                <div class="sale-num">
                    <h3>@Html.Raw(@Model!=null?@Model.TodayOrder:0)</h3>
                    <p>Orders</p>
                </div>
            </div>
        </div>
    </div>
    <script>
    $('#lnkAddBalance').click(function(){
    $.ajax({
              type: 'POST',
              url: 'AdminBalance',
              processData: false,
              contentType: false,
              success: result => {
                      Q.alert({
                    title: "Add Balance",
                    body:result,
                    width : '900px',
                    });
                  Q.preloader.remove();
              },
                error: function (data) {
                    console.log('An error occurred.');
                    console.log(data);
                    Q.preloader.remove();
                },
          })
    })
    </script>