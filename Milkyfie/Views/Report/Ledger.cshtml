

<div class="main-container">
    <!-- Row start -->
    <div class="row gutters">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header bg-primary text-white h6">
                    Ledger Details
                </div>
                <div class="card-body">

                    <div class="row gutters">
                        <div class="col-xl-5 col-lg col-md-5 col-sm-5 col-12">
                            <div class="form-group">
                                <label for="inputName">Select User</label>
                                <select class="form-control" name="ParentID" id="ddluser">
                                    <option id="Option" name="ParentID" value="0">-Select-</option>

                                </select>
                            </div>
                        </div>


                        <div class="col-xl-5 col-lglg-5 col-md-5 col-sm-5 col-12">
                            <div class="form-group">
                                <label for="inputName">Date</label>
                                <input type="text" placeholder="Start Date" readonly="readonly" value="@DateTime.Now.ToString("dd MMM yyyy")" id="txtStartDate" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-2 col-lglg-2 col-md-2 col-sm-2 col-12">
                            <div class="btn-group">
                                <button class="btn btn-lg btn-primary Deliver" style="margin-top:20px" id="btnSubmit" type="submit">Search</button>
                            </div>
                        </div>



                    </div>


                </div>
            </div>
        </div>

    </div>

</div>
<div class="main-container">

    <!-- Row start -->
    <div class="row gutters">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

            <div class="table-container">
                <div class="t-header">Basic Example</div>
                <div class="table-responsive">
                    <table class="table custom-table">
                        <thead>
                            <tr>
                              
                                <th>Customre Name</th>
                                <th>Last Amount </th>
                                <th>Current Amount </th>
                                <th>Amount</th>
                                <th>Transaction Type</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Main container end -->
    @section scripts{
<script>
     $( function() {
            $('#txtStartDate').datepicker({ dateFormat: 'dd M yy' }).val();
    });
    $(document).ready(function(){
        BindDropDownUsers();
      loadGrid();
    });

    $('#btnSubmit').click(function(){
        loadedgerDetails();
    });
       function BindDropDownUsers(){
          var userslist=s.Dropdown.Users();
      userslist.then(result=>
        {
            $('#ddluser').empty().append('<option id="Option" name="UserID" value="0">-Select-</option>').append(result.map(x=>`<option value="${x.id}">${x.name}</option>`));
        });
    }
    function loadedgerDetails(){
         Q.preloader.load();
        var formData=new FormData();
        formData.append("User.Id",$('#ddluser').val());
        formData.append("CreatedOn",$('#txtStartDate').val());
         $.ajax({
               type: 'post',
               url: 'GetLedger',
               processData: false,
               contentType: false,
               data: formData,
                success: function (data) {
                      $('tbody').html(data);
                       Q.preloader.remove();
                },
                error: function (data) {
                     Q.preloader.remove();
                    console.log('An error occurred.');
                    console.log(data);
                       Q.notify(-1, 'An error occurred.');
                },
          });
    }

        var loadGrid = function () {
            debugger;
            let columns = [
                { data: "user.name" },
               { data: "lastAmount" },
                { data: "currentAmount" },
                { data: "amount" },
                { data: "transactionType"}

            ];
            $('table').dataTable({
                processing: true,
                serverSide: true,
                paging: true,
                destroy: true,
                ajax: {
                    url: "/Report/LedgerFilter",
                    type: "POST",
                    data: function (jsonAOData) {
                        return { jsonAOData }
                    },
                    //dataSrc: "data",
                },
                aoColumns: columns,
                //scrollY: $('[name="Applicationlist"]').offset().top + 118,
                scrollCollapse: true,
               // dom: 'R<"top"Bf>rt<"bottom"ilp><"clear">',
            });
        };
        loadGrid();
</script>

    }

