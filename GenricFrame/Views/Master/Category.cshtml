@section scripts{
<script>
    $(document).ready(function(){
    BindDropDown();
        loadCategory();
    });
 

     var frm = $('#frmcat');
    
        frm.submit(function (e) {
            e.preventDefault();
            let data=frm.serialize();
            console.log(data);
            $.ajax({
                type: frm.attr('method'),
                url: frm.attr('action'),
                data: frm.serialize(),
                success: function (data) {
                  loadCategory();
                  BindDropDown();
                   $("#frmcat").trigger("reset");
                },
                error: function (data) {
                    console.log('An error occurred.');
                    console.log(data);
                },
            });
        });
     function loadCategory(){
         $.ajax({
               type: 'post',
                url: 'GetCategory',
                data: frm.serialize(),
                success: function (data) {
                      $('tbody').html(data);
                },
                error: function (data) {
                    console.log('An error occurred.');
                    console.log(data);
                },
            });
    }
     function BindDropDown(){
          var categorylist=s.Dropdown.Category();
      categorylist.then(result=>
        {
            $('#ddlCategory').empty().append('<option id="Option" name="ParentID" value="0">:: Select Category ::</option>').append(result.map(x=>`<option value="${x.categoryID}">${x.categoryName}</option>`));
        });
    }


</script>

}