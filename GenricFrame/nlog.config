<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true" internalLogLevel="Trace" internalLogFile="./ErrorLogs/InnerLog.txt">
  <targets>
    <target xsi:type="File" name="fileTarget" fileName="./ErrorLogs/Error_log" layout="${longdate} ${uppercase:${level}} ${message}" />
    <target xsi:type="ColoredConsole" name="consoleTarget"  layout="${longdate} ${uppercase:${level}} ${message}" />
    <target xsi:type="Database"
            name="dbTarget"
            connectionString="server=DESKTOP-A2A1EKH\SQLEXPRESS; database=milkyfie;Integrated Security=True;MultipleActiveResultSets=True"
            commandText="INSERT INTO [MyLogs]([When],Message,Level,Exception,Trace,Logger) VALUES (getutcdate(),@msg,@level,@exception,@trace,@logger)">
      <parameter name="@msg" layout="${message}" />
      <parameter name="@level" layout="${level}" />
      <parameter name="@exception" layout="${exception}" />
      <parameter name="@trace" layout="${trace}" />
      <parameter name="@logger" layout="${logger}" />
    </target>
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="dbTarget" />
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <!--<logger name="*" minlevel="Error" writeTo="fileTarget" />-->
    <logger name="*" minlevel="Error" writeTo="dbTarget"/>
  </rules>
</nlog>

